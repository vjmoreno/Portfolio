<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <record id="hr_loyalty_program_view_tree" model="ir.ui.view">
      <field name="name">hr.loyalty_program.view.tree</field>
      <field name="model">hr.loyalty.program</field>
      <field name="arch" type="xml">
        <tree string="Frequent Flyer Programs" editable="bottom">
          <field name="name"/>
        </tree>
      </field>
    </record>

    <record id="hr_loyalty_program_view_form" model="ir.ui.view">
      <field name="name">hr.loyalty_program.view.form</field>
      <field name="model">hr.loyalty.program</field>
      <field name="arch" type="xml">
        <form string="Frequent Flyer Program">
          <sheet>
            <div class="oe_title">
              <h1>
                <field name="name"/>
              </h1>
            </div>
            <group/>
          </sheet>
        </form>
      </field>
    </record>

    <record id="hr_loyalty_program_action" model="ir.actions.act_window">
      <field name="name">Frequent Flyer Program</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">hr.loyalty.program</field>
      <field name="view_mode">tree</field>
    </record>

  </data>
</odoo>