<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <record id="hr_employee_dietary_restriction_view_tree" model="ir.ui.view">
      <field name="name">hr.employee.dietary.restriction.view.tree</field>
      <field name="model">hr.employee.dietary.restriction</field>
      <field name="arch" type="xml">
        <tree string="Dietary Restrictions" editable="bottom">
          <field name="name"/>
        </tree>
      </field>
    </record>

    <record id="hr_employee_dietary_restriction_view_form" model="ir.ui.view">
      <field name="name">hr.employee.dietary.restriction.view.form</field>
      <field name="model">hr.employee.dietary.restriction</field>
      <field name="arch" type="xml">
        <form string="Dietary Restriction">
          <sheet>
            <div class="oe_title">
              <h1>
                <field name="name"/>
              </h1>
            </div>
            <group/>
          </sheet>
        </form>
      </field>
    </record>

    <record id="hr_employee_dietary_restriction_action" model="ir.actions.act_window">
      <field name="name">Dietary Restrictions</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">hr.employee.dietary.restriction</field>
      <field name="view_mode">tree</field>
    </record>

  </data>
</odoo>