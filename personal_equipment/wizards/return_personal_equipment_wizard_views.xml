<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="return_personal_equipment_wizard_view" model="ir.ui.view">
        <field name="name">return.personal.equipment.wizard</field>
        <field name="model">return.personal.equipment.wizard</field>
        <field name="arch" type="xml">
            <form string="Return">
                <group>
                    <group>
                        <field name="return_to"/>
                        <field name="equipment_id"/>

                    </group>
                    <group>
                        <field name="close_date"/>
                    </group>
                </group>
                <label for="return_reason" string="Return reason"/>
                <field name="return_reason"/>
                <footer>
                    <button name="action_return" string="Return" type="object" class="btn-primary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>