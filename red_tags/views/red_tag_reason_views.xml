<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="red_tag_reason_tree_view" model="ir.ui.view">
        <field name="name">red.tag.reason.tree</field>
        <field name="model">red.tag.reason</field>
        <field name="arch" type="xml">
            <tree string="Reasons">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="red_tag_reason_form_view" model="ir.ui.view">
        <field name="name">red.tag.reason.form</field>
        <field name="model">red.tag.reason</field>
        <field name="arch" type="xml">
            <form string="Reason">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>